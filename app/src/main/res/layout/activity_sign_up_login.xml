<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.SignUpActivity">

    <TextView
        android:id="@+id/product_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10ssp"
        android:fontFamily="@font/anton"
        android:text="Signup"
        android:textSize="@dimen/_30ssp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:src="@drawable/ellipse1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!--    <ImageView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/ellipse2"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        />-->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_140sdp"
        android:orientation="vertical"
        tools:context=".activities.SignUpActivity">


        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/tv_bg"
            android:hint="First Name"
            android:inputType="text"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/tv_bg"
            android:paddingLeft="@dimen/_10sdp"
            android:hint="Last Name"
            android:inputType="text"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/tv_bg"
            android:paddingLeft="@dimen/_10sdp"
            android:hint="Email"
            android:inputType="text"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/tv_bg"
            android:paddingLeft="@dimen/_10sdp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/com_pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/tv_bg"
            android:paddingLeft="@dimen/_10sdp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textSize="@dimen/_15sdp" />

        <Button
            android:id="@+id/signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:backgroundTint="#F68B8B"
            android:textSize="@dimen/_15sdp"
            android:text="Signup"
            android:enabled="false"
            android:padding="@dimen/_10sdp"/>


        <TextView
            android:id="@+id/switch_text"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_margin="@dimen/_8sdp"
            android:paddingLeft="@dimen/_60sdp"
            android:textSize="@dimen/_12sdp"
            android:text="@string/account"

            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp">

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:dividerColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="OR"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/materialDivider"
                app:layout_constraintEnd_toEndOf="@+id/materialDivider"
                app:layout_constraintHorizontal_bias="0.531"
                app:layout_constraintStart_toStartOf="@+id/materialDivider"
                app:layout_constraintTop_toTopOf="@+id/materialDivider" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/facebook"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:drawableLeft="@drawable/facebook"
            android:text="Log in with Facebook"
            app:strokeColor="#F68B8B" />

        <Button
            android:id="@+id/google"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:drawableLeft="@drawable/google"
            android:text="Log in with Google"
            app:strokeColor="#F68B8B" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>